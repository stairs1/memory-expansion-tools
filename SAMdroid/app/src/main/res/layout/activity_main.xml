<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/button_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doit"
            android:id="@+id/button_do" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp" android:textSize="16sp" android:background="#00531313"
    />
    <Button
            android:text="@string/button_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="start_service"
            android:id="@+id/button_start_service" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp" android:background="@color/colorAccent"/>
    <Button
            android:text="@string/button_stop_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stop_service"
            android:id="@+id/button_stop_service" app:layout_constraintStart_toEndOf="@+id/button_start_service"
            android:layout_marginStart="8dp" android:background="@android:color/holo_orange_dark"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>